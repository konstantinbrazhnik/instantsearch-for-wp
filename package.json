{
  "name": "instantsearch-for-wp",
  "version": "1.0.0",
  "author": "Konstantin Brazhnik <konst@ntin.solutions>",
  "browserslist": {
	"production": [
		">0.2%",
		"not dead",
		"not op_mini all"
	],
	"development": [
		"last 1 chrome version",
		"last 1 firefox version",
		"last 1 safari version"
	]
  },
  "scripts": {
    "build": "wp-scripts build --webpack-copy-php",
    "format": "wp-scripts format",
    "lint:css": "wp-scripts lint-style",
    "lint:js": "wp-scripts lint-js",
    "packages-update": "wp-scripts packages-update",
    "plugin-zip": "wp-scripts plugin-zip",
    "start": "wp-scripts start --webpack-copy-php",
    "typesense": "brew install typesense/tap/typesense-server@28.0 && brew services start typesense-server@28.0",
    "typesense:docker": "mkdir \"$(pwd)\"/typesense-data && docker-compose up",
    "typesense:mac:install": "curl -O https://dl.typesense.org/releases/28.0/typesense-server-28.0-darwin-arm64.tar.gz && tar -xzf typesense-server-28.0-darwin-arm64.tar.gz",
    "typesense:mac": "export TYPESENSE_API_KEY=xyz && mkdir -p \"$(pwd)\"/typesense-data && ./typesense-server --data-dir=\"$(pwd)\"/typesense-data --api-key=$TYPESENSE_API_KEY --enable-cors",
    "typesense:mac:cleanup": "rm -rf \"$(pwd)\"/typesense-data",
    "typesense:dashboard": "git clone https://github.com/bfritscher/typesense-dashboard.git && cd typesense-dashboard && npm install && PUBLIC_PATH=\"/wp-content/plugins/yoko-core/assets/js/ts-dashboard\" npm run build && mv dist/* ../assets/js/ts-dashboard/ && cd .. && rm -rf typesense-dashboard"
  },
  "devDependencies": {
    "@wordpress/scripts": "^30.12.0",
    "grunt": "~0.4.5",
    "grunt-wp-i18n": "~0.5.0",
    "grunt-wp-readme-to-markdown": "~1.0.0",
    "husky": "^9.1.3"
  },
  "dependencies": {
    "@babel/runtime": "^7.27.6",
    "@wordpress/api-fetch": "^7.31.0",
    "@wordpress/components": "^30.4.0",
    "@wordpress/data": "^10.31.0",
    "@wordpress/dom-ready": "^4.31.0",
    "@wordpress/element": "^6.31.0",
    "@wordpress/i18n": "^6.4.0",
    "@wordpress/icons": "^10.31.0",
    "@wordpress/notices": "^5.31.0",
    "alpinejs": "^3.14.1",
    "instantsearch.css": "^8.5.1",
    "instantsearch.js": "^4.7.0",
    "typesense-instantsearch-adapter": "^2.9.0"
  }
}
